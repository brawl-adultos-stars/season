<mvc:View
        controllerName="brawl.adultos.season.controller.Player"
        xmlns:mvc="sap.ui.core.mvc"
        displayBlock="true"
        xmlns="sap.m">
    <Page
            id="page"
            title="{i18n>club_season_end}: {path: 'season>/end', type: 'sap.ui.model.type.DateTime'} ({season>/delta})"
            showNavButton="true"
            navButtonPress=".onBack">
        <content>
            <ObjectHeader
                    intro="{player>/tag}"
                    title="{player>/name}"
                    number="{ path: 'player>/trophies', type: 'sap.ui.model.odata.type.Int32'}"
                    numberUnit="{i18n>player_trophies}">
                <attributes></attributes>
                <statuses>
                    <!-- <ObjectStatus
                            title="{i18n>player_season_end}"
                            text="?" />
                    <ObjectStatus
                            title="{i18n>player_trophies_difference}"
                            text="?" /> -->
                </statuses>
            </ObjectHeader>
            <Table
                    items="{player>/brawlers}"
                    alternateRowColors="true"
                    fixedLayout="false">
                <columns>
                    <Column demandPopin="false">
                        <Text text="{i18n>player_col_brawler}" />
                    </Column>
                    <Column demandPopin="false">
                        <Text text="{i18n>player_col_brawler_name}" />
                    </Column>
                    <Column
                            demandPopin="true"
                            popinDisplay="Inline"
                            minScreenWidth="Tablet">
                        <Text text="{i18n>player_col_power}" />
                    </Column>
                    <Column
                            demandPopin="true"
                            popinDisplay="Inline"
                            minScreenWidth="Tablet">
                        <Text text="{i18n>player_col_rank}" />
                    </Column>
                    <Column
                            demandPopin="true"
                            popinDisplay="Inline"
                            minScreenWidth="Tablet">
                        <Text text="{i18n>player_col_trophies}" />
                    </Column>
                    <Column
                            demandPopin="true"
                            popinDisplay="Inline"
                            minScreenWidth="Tablet">
                        <Text text="{i18n>player_col_season_end}" />
                    </Column>
                    <Column
                            demandPopin="false"
                            minScreenWidth="Phone">
                        <Text text="{i18n>player_col_difference}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Image
                                    height="4em"
                                    src="{
                                        model: 'player',
                                        path: 'name',
                                        formatter: '.formatBrawlerImage'
                                    }" />
                            <ObjectIdentifier title="{player>name}" />
                            <Text text="{player>power}" />
                            <Text text="{player>rank}" />
                            <ObjectNumber
                                    number="{player>trophies}"
                                    state="Information" />
                            <ObjectNumber number="{     
                                model: 'player',
                                path: 'trophies',
                                formatter: '.formatSeasonEnd'
                            }" />
                            <ObjectNumber
                                    number="{     
                                model: 'player',
                                path: 'trophies',
                                formatter: '.formatDifference'
                            }"
                                    state="{     
                                        model: 'player',
                                        path: 'trophies',
                                        formatter: '.formatDifferenceState'
                                    }" />

                        </cells>
                    </ColumnListItem>

                </items>
            </Table>
        </content>
        <footer>
            <!-- <Toolbar>
                <ToolbarSpacer />
            </Toolbar> -->
        </footer>
    </Page>

</mvc:View>